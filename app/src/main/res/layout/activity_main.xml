<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvGymMembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gym Membership"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367" />

    <Button
        android:id="@+id/btnNewMember"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="55dp"
        android:text="New Member"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGymMembership" />

    <Button
        android:id="@+id/btnCheckInOut"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="55dp"
        android:text="Check In/Out"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/btnNewMember"
        app:layout_constraintTop_toBottomOf="@+id/tvGymMembership" />

    <Button
        android:id="@+id/btnAllMembers"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="55dp"
        android:text="All Members"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/btnCheckInOut"
        app:layout_constraintTop_toBottomOf="@+id/tvGymMembership" />

</androidx.constraintlayout.widget.ConstraintLayout>